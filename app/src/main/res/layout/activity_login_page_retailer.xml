<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF9F9"
    tools:context=".login_page_retailer">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="50dp"
        android:background="@color/white"
        android:fontFamily="@font/actor"
        android:text="Login as a Retailer"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/locationfarmer"
        android:layout_width="250dp"
        android:layout_height="51dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="135dp"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="  jane@example.com"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/GstinRetailer"
        android:layout_width="250dp"
        android:layout_height="51dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:inputType="textPassword"
        android:text="hello1234"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/loginfarmer"
        android:layout_width="180dp"
        android:layout_height="51dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="315dp"
        android:backgroundTint="@color/black"
        android:onClick="cropbuy"
        android:text="Submit"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>